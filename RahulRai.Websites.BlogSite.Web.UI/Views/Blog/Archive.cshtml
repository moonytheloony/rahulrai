@using System.Globalization
@model IEnumerable<RahulRai.Websites.BlogSite.Web.UI.Models.Archive>
@foreach (var archivePost in Model)
{
    <h1>@archivePost.Year</h1>
    foreach (var monthGroup in archivePost.MonthGroups)
    {
        <!-- Timeline -->
        <div class="timeline">
            <!-- Line component -->
            <div class="line text-muted"></div>
            <!-- Separator -->
            <div class="separator text-muted">
                <h3><time>@CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(monthGroup.Month)</time></h3>
            </div>
            <!-- /Separator -->
            @foreach (var blogPost in monthGroup.Posts)
            {
                <!-- Panel -->
                <article class="panel panel-primary panel-outline">
                    <!-- Icon -->
                    <div class="panel-heading icon">
                        <b>
                            @blogPost.PostedDate.Day
                        </b>
                        @*<i class="glyphicon glyphicon-pencil"></i>*@
                    </div>
                    <!-- /Icon -->
                    <!-- Body -->
                    <div class="panel-body">
                        <h4>
                            <a href="/post/@blogPost.BlogFormattedUri" data-toggle="tooltip" title="@blogPost.PostedDate.ToString("MMMM dd, yyyy")">@blogPost.Title</a>
                        </h4>
                    </div>
                    <!-- /Body -->
                </article>
                <!-- /Panel -->
            }
        </div>
        <!-- /Timeline -->
    }
}