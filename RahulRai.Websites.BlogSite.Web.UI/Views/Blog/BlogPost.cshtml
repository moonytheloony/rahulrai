@model RahulRai.Websites.Utilities.Common.Entities.BlogPost
<!-- Blog Post Content Column -->
<div class="col-lg-8">
    <!-- Blog Post -->
    <!-- Title -->
    <h1>@Model.Title</h1>
    <hr>
    <div class="container-fluid">
        <div class="row">
            <div class="col-xs-6 text-left">
                <!-- Date/Time -->
                <p><span class="glyphicon glyphicon-time"></span> Posted on @Model.PostedDate.ToLocalTime().ToString("f")</p>
            </div>
            <div class="col-xs-6 text-right">
                <!--Custom Text-->
                <p>@Html.Raw(Model.SpecialMention)</p>
            </div>
        </div>
    </div>
    <hr>
    <!-- Post Content -->
    @Html.Raw(Model.Body)
    <hr>
    <!-- Blog Comments -->
    <div id="disqus_thread">
        @* ReSharper disable once PossibleNullReferenceException *@
        <script type="text/javascript">
            /* * * CONFIGURATION VARIABLES * * */
            var disqus_shortname = 'rahulrai';
            var disqus_url = '@Request.Url.ToString()';
            var disqus_identifier = '@Request.Url.AbsolutePath';
            /* * * DON'T EDIT BELOW THIS LINE * * */
            (function () {
                var dsq = document.createElement('script');
                dsq.type = 'text/javascript';
                dsq.async = true;
                dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
                (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
            })();
        </script>
        <noscript>Please enable JavaScript to view the <a href="https://disqus.com/?ref_noscript" rel="nofollow">comments powered by Disqus.</a></noscript>
    </div>
</div>
