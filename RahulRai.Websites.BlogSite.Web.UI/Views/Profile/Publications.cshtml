@{
    Layout = "~/Views/Shared/_Profile.cshtml";
    var myEmail = ViewBag.MyEmail;
}
@using RahulRai.Websites.Utilities.Common.Entities
@model IEnumerable<Publication>
<h1>Publications</h1>
<hr>
<!-- Date/Time -->
<p><span class="glyphicon glyphicon-time"></span> Updated on September 30, 2015 at 9:00 PM
</p>
<hr>
<div class="container">
    <div class="row">
        <div class="board">
            <div class="board-inner">
                <ul class="nav nav-tabs" id="myTab">
                    <div class="liner"></div>
                    <li class="active">
                        <a href="#books" data-toggle="tab" title="Books">
                            <span class="round-tabs one">
                                <i class="glyphicon glyphicon-book"></i>
                            </span>
                        </a>
                    </li>
                    <li>
                        <a href="#articles" data-toggle="tab" title="Articles">
                            <span class="round-tabs two">
                                <i class="glyphicon glyphicon-file"></i>
                            </span>
                        </a>
                    </li>
                    <li>
                        <a href="#talk" data-toggle="tab" title="Talk">
                            <span class="round-tabs three">
                                <i class="glyphicon glyphicon-volume-up"></i>
                            </span>
                        </a>
                    </li>
                    <li>
                        <a href="#community" data-toggle="tab" title="Community">
                            <span class="round-tabs four">
                                <i class="glyphicon glyphicon-user"></i>
                            </span>
                        </a>
                    </li>
                    <li>
                        <a href="#upcoming" data-toggle="tab" title="Upcoming">
                            <span class="round-tabs five">
                                <i class="glyphicon glyphicon-calendar"></i>
                            </span>
                        </a>
                    </li>
                </ul>
            </div>
            <div class="tab-content" id="link_other">
                <div class="tab-pane fade in active" id="books">
                    <div class="text-right">
                        <a href="mailto:@myEmail?subject=Authoring or Review Request" class="btn btn-success">Authoring or Review Request<span style="margin-left: 10px;" class="glyphicon glyphicon-pencil"></span></a>
                    </div>
                    <div class="text-left">
                        <h1>Books</h1>
                    </div>
                    @foreach (var item in Model.Where(element => element.PublicationType == PublicationType.Books))
                    {
                        <div>
                            <a href="@item.PublicationUri.ToString()">
                                <h3>@item.PublicationName</h3>
                            </a>
                            <div>
                                @item.Line1
                            </div>
                            <div>
                                @item.Line2
                            </div>
                        </div>
                    }
                </div>
                <div class="tab-pane fade" id="articles">
                    <div class="text-right">
                        <a href="mailto:@myEmail?subject=Authoring or Revieweing Request" class="btn btn-success">Authoring & Reviewing Request<span style="margin-left: 10px;" class="glyphicon glyphicon-pencil"></span></a>
                    </div>
                    <div class="text-left">
                        <h1>Articles</h1>
                    </div>
                    @foreach (var item in Model.Where(element => element.PublicationType == PublicationType.Articles))
                    {
                        <div>
                            <a href="@item.PublicationUri.ToString()">
                                <h3>@item.PublicationName</h3>
                            </a>
                            <div>
                                @item.Line1
                            </div>
                            <div>
                                @item.Line2
                            </div>
                        </div>
                    }
                </div>
                <div class="tab-pane fade" id="talk">
                    <div class="text-right">
                        <a href="mailto:@myEmail?subject=Invite For a Talk" class="btn btn-success">Invite Me to Speak<span style="margin-left: 10px;" class="glyphicon glyphicon-volume-up"></span></a>
                    </div>
                    <div class="text-left">
                        <h1>Talk</h1>
                    </div>
                    @foreach (var item in Model.Where(element => element.PublicationType == PublicationType.Talk))
                    {
                        <div>
                            <a href="@item.PublicationUri.ToString()">
                                <h3>@item.PublicationName</h3>
                            </a>
                            <div>
                                @item.Line1
                            </div>
                            <div>
                                @item.Line2
                            </div>
                        </div>
                    }
                </div>
                <div class="tab-pane fade" id="community">
                    <div class="text-right">
                        <a href="mailto:@myEmail?subject=Invite For a Community Initiative" class="btn btn-success">Invite Me to Community Initiative<span style="margin-left: 10px;" class="glyphicon glyphicon-user"></span></a>
                    </div>
                    <div class="text-left">
                        <h1>Community</h1>
                    </div>
                    @foreach (var item in Model.Where(element => element.PublicationType == PublicationType.Community))
                    {
                        <div>
                            <a href="@item.PublicationUri.ToString()">
                                <h3>@item.PublicationName</h3>
                            </a>
                            <div>
                                @item.Line1
                            </div>
                            <div>
                                @item.Line2
                            </div>
                        </div>
                    }
                </div>
                <div class="tab-pane fade" id="upcoming">
                    <div class="text-right">
                        <a href="mailto:@myEmail?subject=Request to Join You" class="btn btn-success">Join Me in an Initiative<span style="margin-left: 10px;" class="glyphicon glyphicon-calendar"></span></a>
                    </div>
                    <div class="text-left">
                        <h1>Upcoming</h1>
                    </div>
                    @foreach (var item in Model.Where(element => element.PublicationType == PublicationType.Upcoming))
                    {
                        <div>
                            <a href="@item.PublicationUri.ToString()">
                                <h3>@item.PublicationName</h3>
                            </a>
                            <div>
                                @item.Line1
                            </div>
                            <div>
                                @item.Line2
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>


