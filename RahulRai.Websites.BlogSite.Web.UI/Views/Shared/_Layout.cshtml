<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="description" content="Rahul on Technology and Things">
        <meta name="author" content="Rahul Rai">
        <title>@ViewBag.Title</title>
        <!-- Bootstrap Core CSS -->
        <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
        <!-- Custom CSS -->
        @Styles.Render("~/styles/SyntaxHighlighter")
        @Scripts.Render("~/bundles/SyntaxHighlighter")
        <link href="~/Content/blog-home.css" rel="stylesheet" />
        <link href="~/Content/Zocial/zocial.css" rel="stylesheet" />
        <script type="text/javascript">
            SyntaxHighlighter.config.strings.viewSource = "view my source!!!!";
            SyntaxHighlighter.config.strings.expandSource = "+ expand source";
            SyntaxHighlighter.config.strings.help = "Help";
            SyntaxHighlighter.config.strings.alert = "SyntaxHighlighter\n\n";
            SyntaxHighlighter.config.strings.noBrush = "Can't find brush for:";
            SyntaxHighlighter.config.strings.brushNotHtmlScript = "Brush wasn't made for html-script option:";
            SyntaxHighlighter.config.strings.copyToClipboard = "copy to clipboard";
            SyntaxHighlighter.config.strings.copyToClipboardConfirmation = "The code is in your clipboard now";
            SyntaxHighlighter.config.strings.print = "print";
            SyntaxHighlighter.defaults['toolbar'] = false;
            SyntaxHighlighter.all();
        </script>
        <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
        <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
        <!--[if lt IE 9]>
            <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
            <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
        <![endif]-->
    </head>
    <body>
        <!-- Navigation -->
        <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
            <div class="container">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <a class="navbar-brand mylogo" href="#">rahul rai</a>
                </div>
                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <div class="col-sm-4 col-md-4 pull-right col-center">
                        <form class="navbar-form" role="search">
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="Where's that blog?" name="srch-term" id="srch-term">
                                <div class="input-group-btn">
                                    <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <!-- /.container -->
            </div>
        </nav>

        <!-- Page Content -->
        <div class="container">
            <div class="row">
                @RenderBody()
                <!-- Blog Sidebar Widgets Column -->
                <div class="col-md-4">
                    <div class="text-center">
                        <img class="img-responsive img-thumbnail" alt="Profile Picture" width="200" height="200"
                             src="http://placehold.it/200X200" />
                        <br />
                        <br />
                        <a href="#">Get to Know Me</a>
                    </div>

                    <hr />
                    <br />
                    <!-- Blog Categories Well -->
                    <div class="well">
                        <span class="borderDivSpan pull-right">&#9990;</span>
                        <h4>Stay in Touch!</h4>
                        <br />
                        <p class="text-center">
                            <a href="#" class="zocial icon facebook">Facebook</a>
                            <a href="#" class="zocial icon linkedin">LinkedIn</a>
                            <a href="#" class="zocial windows icon">MSDN</a>
                            <a href="#" class="zocial icon github">Fork me on Github</a>
                            <a href="#" class="zocial email icon">Send a message</a>
                        </p>
                    </div>
                    <!-- Side Widget Well -->
                    <div class="well top">
                        <span class="borderDivSpan pull-right">&#9829;</span>
                        <h4>Hi! I am Blog...</h4>
                        <br />
                        <p>
                            ...and I am running on <a href="http://azure.microsoft.com/">Microsoft Azure!</a>
                            <br />
                            That search box? That's Azure Search!
                            Azure App Service, Search, Document DB, Storage and GIT are helping me be with you today!
                        </p>
                    </div>
                    <!-- Side Widget Well -->
                    <div class="well">
                        <span class="borderDivSpan pull-right">&#9784;</span>
                        <h4>Karma</h4>
                        <br />
                        <p>
                            If the site or content doesn't love you back, let me know @@ <a href="mailto:rahulrai@rahulrai.in">rahulrai@@rahulrai.in</a>
                        </p>
                    </div>
                </div>
            </div>
            <!-- /.row -->
            <hr>
            <!-- Footer -->
            <footer>
                <div class="row text-center">
                    <div class="col-lg-12">
                        <p>Copyright &copy; rahulrai.in @DateTime.Now.Year</p>
                        <p>Thank you <a href="http://startbootstrap.com/">StartBootstrap.com</a></p>
                    </div>
                    <!-- /.col-lg-12 -->
                </div>
                <!-- /.row -->
            </footer>
        </div>
        <!-- /.container -->

        <script src="~/Scripts/jquery-1.10.2.min.js"></script>
        <script src="~/Scripts/bootstrap.min.js"></script>
    </body>
</html>