<!DOCTYPE html>
<html lang="en">
<!--Initialize Data-->
@{
    var title = ViewBag.Title;
    var resourceBasePath = ViewBag.ResourceBasePath;
    var myEmail = ViewBag.MyEmail;
}
<!--/Initialize Data-->
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Rahul Rai on Cloud, Technology and Coding">
    <meta name="keywords" content="azure, microsoft, cloud, sql, database, cloud storage, code, c#, database, blog">
    <meta name="author" content="Rahul Rai">
    <title>@title</title>
    <!-- Bootstrap Core CSS -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <!-- Custom CSS -->
    @Styles.Render("~/styles/SyntaxHighlighter")
    @Scripts.Render("~/bundles/SyntaxHighlighter")
    <link href="~/Content/blog-home.css" rel="stylesheet" />
    <link href="~/Content/Zocial/zocial.css" rel="stylesheet" />
    <script type="text/javascript">
        SyntaxHighlighter.defaults['toolbar'] = false;
        SyntaxHighlighter.all();
    </script>
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                @Html.RouteLink("Rahul Rai", "Default", new { controller = "Blog", action = "GetLatestBlogs" }, new { @class = "mylogo" })
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <div class="col-sm-4 col-md-4 pull-right col-center">
                    <form class="navbar-form" role="search">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Where's that blog?" name="srch-term" id="srch-term">
                            <div class="input-group-btn">
                                <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <!-- /.container -->
        </div>
    </nav>
    <div>
        <!-- Page Content -->
        <div class="container contentPane">
            <div class="row">
                @RenderBody()
                <!-- Blog Sidebar Column -->
                <div class="col-md-4">
                    <div class="hidden-lg hidden-md hidden-sm">
                        <br />
                    </div>
                    <div class="text-right hidden-xs">
                        <a href="mailto:@myEmail?subject=Issue in site" title="Report Issues">
                            <img src=@(resourceBasePath + "exclamation-mark-red-icon.png") alt="Exclamation" />
                        </a>
                    </div>
                    <div class="text-center">
                        <img class="img-responsive img-thumbnail" alt="Profile Picture" width="200" height="200"
                             src="http://placehold.it/200X200" />
                        <a href="#" class="btn btn-block btn-lg">Hi, I am Rahul...</a>
                    </div>
                    <br />
                </div>
            </div>
            <!-- /.row -->
            <!-- /.container -->
        </div>
        <!-- Footer -->
        <footer>
            <div class="footerDiv" id="link_other">
                <div class="row">
                    <div class="col-xs-6 text-left">
                        <p>Copyright &copy; rahulrai.in @DateTime.Now.Year</p>
                        <p>Powered by <a href="http://azure.microsoft.com/en-us/">Microsoft Azure App Services</a> </p>
                        <p>Continuous deployment through <a href="http://github.com/‎">GITHub</a></p>
                        <p>Theme courtsey <a href="http://startbootstrap.com/">StartBootstrap.com</a></p>
                    </div>
                    <div class="col-xs-6 text-right">
                        <a href="https://www.facebook.com/moonytheloony" class="zocial icon facebook">Facebook</a>
                        <a href="https://in.linkedin.com/in/rahulrahul" class="zocial icon linkedin">LinkedIn</a>
                        <a href="https://social.msdn.microsoft.com/profile/rahul.rai/" class="zocial windows icon">MSDN</a>
                        <a href="https://github.com/moonytheloony" class="zocial icon github">Fork me on Github</a>
                        <a href="mailto:@myEmail" class="zocial email icon">Send a message</a>
                    </div>
                    <!-- /.col-lg-12 -->
                </div>
                <!-- /.row -->
            </div>
        </footer>
    </div>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <!--Open links in new tab-->
    <script type="text/javascript">
        $(document).ready(function () {
            $('#link_other a').attr('target', '_blank').attr('title', 'This link will open in a new window.');
        });
    </script>
</body>
</html>