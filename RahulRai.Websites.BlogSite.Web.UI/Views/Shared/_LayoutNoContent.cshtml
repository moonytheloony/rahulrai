<!DOCTYPE html>
<html lang="en">
<!--Initialize Data-->
@{
    var title = ViewBag.Title;
    var resourceBasePath = ViewBag.ResourceBasePath;
    var myEmail = ViewBag.MyEmail;
    //// Expire content daily.
    var version = DateTime.UtcNow.ToString("yy-mm-dd");
}
<!--/Initialize Data-->
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Rahul Rai on Cloud, Technology and Code">
    <meta name="keywords" content="azure, microsoft, cloud, sql, database, cloud storage, code, c#, database, blog, rahulrai, rahul rai, rahul">
    <meta name="author" content="Rahul Rai">
    <title>@title</title>
    <link rel="icon" href="@(resourceBasePath + "RahulRai.ico")" />
    <!-- Bootstrap Core CSS -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <!-- Custom CSS -->
    @Styles.Render("~/styles/SyntaxHighlighter")
    @Scripts.Render("~/bundles/SyntaxHighlighter")
    <link href="~/Content/blog-home.css?version=@version" rel="stylesheet" />
    <script type="text/javascript">
        SyntaxHighlighter.defaults['toolbar'] = false;
        SyntaxHighlighter.all();
    </script>
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <!-- Navigation -->
    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="row">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    @Html.RouteLink("Rahul Rai", "Default", new { controller = "Blog", action = "GetLatestBlogs" }, new { @class = "mylogo" })
                </div>
                <div class="col-sm-4 col-md-4 pull-right col-center hidden-xs">
                    @using (Html.BeginRouteForm("Default", new { controller = "Blog", action = "SearchResult" }, FormMethod.Get, new { @class = "navbar-form", @role = "search" }))
                    {
                        <div class="input-group text-right">
                            @Html.TextBox("searchTerm", null, new { @class = "form-control", placeholder = "Where's that blog?", maxlength = 20 })
                            <div class="input-group-btn">
                                <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                            </div>
                        </div>
                    }
                </div>
                <!-- /.container -->
            </div>
        </div>
    </nav>
    <div>
        <!-- Page Content -->
        <div class="container contentPane">
            <div class="row">
                @RenderBody()
            </div>
        </div>
        <!-- /.row -->
        <!-- /.container -->
    </div>
    <!-- Footer -->
    <footer>
        <div class="footerDiv" id="link_other">
            <div class="row">
                <div class="col-xs-6 text-left">
                    <p>Copyright &copy; rahulrai.in @DateTime.Now.Year</p>
                    <p>Powered by <a href="http://azure.microsoft.com/en-us/">Microsoft Azure App Services</a> </p>
                    <p>Continuous deployment through <a href="http://github.com/‎">GITHub</a></p>
                    <p>Theme courtesy <a href="http://startbootstrap.com/">StartBootstrap.com</a></p>
                    <p>&hearts; <a href="https://www.facebook.com/neha.bharadwaj2">Neha Rai</a></p>
                </div>
                <div class="col-xs-6 text-right">
                    <a href="https://www.facebook.com/moonytheloony"><img src="~/Content/Social/48/fb.png" alt="facebook" class="iconImage img-responsive" /></a>
                    <a href="https://in.linkedin.com/in/rahulrahul"><img src="~/Content/Social/48/linkedin.png" alt="linkedin" class="iconImage img-responsive" /></a>
                    <a href="https://social.msdn.microsoft.com/profile/rahul.rai/"><img src="~/Content/Social/48/Microsoft.png" alt="MSDN" class="iconImage img-responsive" /></a>
                    <a href="https://github.com/moonytheloony"><img src="~/Content/Social/48/github.png" alt="GITHub" class="iconImage img-responsive" /></a>
                    <a href="mailto:@myEmail"><img src="~/Content/Social/48/email.png" alt="email" class="iconImage img-responsive" data-toggle="tooltip" title="rahulrai@rahulrai.in" /></a>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        </div>
    </footer>
    <script type="text/javascript">
        //Open links in new tab
        $(document).ready(function () {
            $('#link_other a').attr('target', '_blank').attr('title', 'This link will open in a new window.');
        });

        //DataTransfer Tooltip
        $(document).ready(function () {
            $('[data-toggle="tooltip"]').tooltip();
        });
    </script>
</body>
</html>